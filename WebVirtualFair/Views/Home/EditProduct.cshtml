@model ProductData

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Editar Producto</h2>


<form asp-action="EditProduct">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <div class="form-group">
                    <label asp-for="name" class="custom-control-label"> Nombre</label>
                    <input asp-for="name" class="form-control"/>
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="description" class="custom-control-label">Descripción</label>
                    <input asp-for="description" class="form-control"/>
                    <span asp-validation-for="description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="image" class="custom-control-label">Imagen</label>
                    <input asp-for="image" class="form-control"/>
                    <span asp-validation-for="image" class="text-danger"></span>
                </div>

               
           

                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary"/>
                </div>
            </div>
        </div>
    </div>
</form>


<div>
    <a asp-action="listaProsucto">Back to List</a>
</div>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
